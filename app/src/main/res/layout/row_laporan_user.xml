<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/penampungGroupSatu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/txt_namapelapor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Pelapor"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/txt_pesanterlampir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan Terlampir"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_tanggallapor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/penampungGroupSatu"
        android:text="Tanggal Pelaporan"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="0dp"
        />

</RelativeLayout>