<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_fragment_empat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:orientation="vertical"
    tools:context="com.example.priad.usdaku.fragments.tab4_user"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            >

            <ImageView
                android:id="@+id/gambarBarangYangDiJual"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
              />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gambarBarangYangDiJual"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="15dp"
                >
                <EditText
                    android:id="@+id/namaBarang"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nama Barang"
                    android:textSize="30sp"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gambarBarangYangDiJual"
                android:layout_below="@+id/til1"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="15dp"
                >
                <EditText
                    android:id="@+id/keteranganBarang"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Keterangan"
                    android:textSize="30sp"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/gambarBarangYangDiJual"
                android:layout_below="@+id/til2"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="15dp"
                >
                <EditText
                    android:id="@+id/hargaBarang"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Harga"
                    android:textSize="30sp"
                    android:inputType="number"
                    />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/jualBarangnya"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:text="JUAL"
                android:textSize="50dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/barangYangDiJual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />

</LinearLayout>
